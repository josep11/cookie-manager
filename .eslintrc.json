{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-floating-promises": [
            "error"
        ],
        "prettier/prettier": "error",
        "lines-between-class-members": [
            // 0 = off, 1 = warn, 2 = error
            "1",
            "always"
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ]
    }
}