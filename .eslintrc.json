{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-floating-promises": [
            "error"
        ],
        "no-multiple-empty-lines": [
            1,
            {
                "max": 1
            }
        ],
        "lines-between-class-members": [
            "error",
            "always"
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ]
    }
}